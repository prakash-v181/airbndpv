<% layout('layouts/boilerplate') %>

<section class="hero-v2 py-5">
  <div class="row g-4 align-items-center">
    <div class="col-lg-6" data-aos="fade-right">
      <div class="hero-chip mb-3">
        <span class="dot-live"></span>
        Live • 120+ stays available this week
      </div>

      <h1 class="hero-heading mb-3">
        Stay in places that
        <span class="hero-highlight">feel like home</span>
      </h1>

      <p class="hero-text mb-4">
        WanderLust helps you discover curated stays across beaches, cities, mountains and hidden gems –
        with real reviews, secure booking and a smooth experience.
      </p>

      <div class="d-flex flex-wrap gap-3 mb-4">
        <a href="/listings" class="btn btn-lg btn-hero-primary">
          <i class="fa-solid fa-compass me-2"></i> Explore stays
        </a>
        <a href="/listings/new" class="btn btn-lg btn-hero-ghost">
          <i class="fa-solid fa-house-chimney-window me-2"></i> List your place
        </a>
      </div>

      <div class="d-flex flex-wrap gap-4 hero-badges">
        <div class="mini-stat">
          <span class="mini-label">Guests this month</span>
          <span class="mini-value">2,431</span>
        </div>
        <div class="mini-stat">
          <span class="mini-label">Average rating</span>
          <span class="mini-value">
            <i class="fa-solid fa-star text-warning me-1"></i>4.8
          </span>
        </div>
        <div class="mini-stat">
          <span class="mini-label">Countries</span>
          <span class="mini-value">18+</span>
        </div>
      </div>
    </div>

    <div class="col-lg-6 position-relative" data-aos="fade-left">
      <div class="hero-stack">
        <div class="floating-card card-main">
          <div class="card-img-wrapper">
            <img
              src="https://images.pexels.com/photos/1571458/pexels-photo-1571458.jpeg"
              alt="Cabin"
            />
          </div>
          <div class="floating-body">
            <h5>Cabin above the clouds</h5>
            <p class="mb-1 text-muted-small">Manali • Entire cabin</p>
            <p class="mb-0 price-lg">
              ₹4,500
              <span class="text-muted-small">/ night</span>
            </p>
          </div>
        </div>

        <div class="floating-card card-tag-1" data-aos="zoom-in">
          <i class="fa-solid fa-wifi me-2"></i> Fast WiFi
        </div>
        <div class="floating-card card-tag-2" data-aos="zoom-in" data-aos-delay="150">
          <i class="fa-solid fa-mug-hot me-2"></i> Breakfast included
        </div>
        <div class="floating-card card-tag-3" data-aos="zoom-in" data-aos-delay="300">
          <i class="fa-solid fa-shield-heart me-2"></i> Verified host
        </div>
        <div class="floating-card card-mini-profile" data-aos="fade-up">
          <div class="avatar-circle">AK</div>
          <div>
            <p class="mb-0 text-muted-small">“Stayed here last winter –</p>
            <p class="mb-0 text-muted-small">best view I've ever seen.”</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="mt-4" data-aos="fade-up">
  <div class="stats-strip">
    <div class="stats-item">
      <span class="label">Response time</span>
      <span class="value">Under 5 min</span>
    </div>
    <div class="stats-item">
      <span class="label">Cancellations</span>
      <span class="value">Flexible policy</span>
    </div>
    <div class="stats-item">
      <span class="label">Secure payments</span>
      <span class="value">Protected by Stripe</span>
    </div>
  </div>
</section>

<section class="mt-5" data-aos="fade-up">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="section-title mb-0">Trending destinations</h2>
    <a href="/listings" class="section-link">
      View all <i class="fa-solid fa-arrow-right ms-1"></i>
    </a>
  </div>

  <div class="dest-scroll-wrapper">
    <div class="dest-scroll">
      <a href="/listings?location=Goa" class="dest-card">
        <div class="dest-img">
          <img src="https://images.pexels.com/photos/261102/pexels-photo-261102.jpeg" alt="Goa" />
        </div>
        <div class="dest-body">
          <h5>Goa</h5>
          <p>Beachfront stays & villas</p>
        </div>
      </a>

      <a href="/listings?location=Bengaluru" class="dest-card">
        <div class="dest-img">
          <img src="https://images.pexels.com/photos/259588/pexels-photo-259588.jpeg" alt="Bengaluru" />
        </div>
        <div class="dest-body">
          <h5>Bengaluru</h5>
          <p>City lofts & studios</p>
        </div>
      </a>

      <a href="/listings?location=Manali" class="dest-card">
        <div class="dest-img">
          <img src="https://images.pexels.com/photos/750873/pexels-photo-750873.jpeg" alt="Manali" />
        </div>
        <div class="dest-body">
          <h5>Manali</h5>
          <p>Cabins & mountain views</p>
        </div>
      </a>

      <a href="/listings?location=Kerala" class="dest-card">
        <div class="dest-img">
          <img src="https://images.pexels.com/photos/1320684/pexels-photo-1320684.jpeg" alt="Kerala" />
        </div>
        <div class="dest-body">
          <h5>Kerala</h5>
          <p>Backwaters & retreats</p>
        </div>
      </a>
    </div>
  </div>
</section>

<section class="mt-5" data-aos="fade-up">
  <div class="row g-4 align-items-start">
    <div class="col-lg-5">
      <h2 class="section-title mb-3">How WanderLust works</h2>
      <p class="text-muted-small mb-4">
        Whether you're booking your next adventure or listing your own stay, we make the
        process smooth, transparent and secure.
      </p>
      <a href="/register" class="btn btn-outline-light btn-sm rounded-pill px-3">
        <i class="fa-solid fa-user-plus me-2"></i> Join as guest or host
      </a>
    </div>
    <div class="col-lg-7">
      <div class="steps-timeline">
        <div class="step-item">
          <div class="step-icon">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
          <div>
            <h5>Browse verified listings</h5>
            <p>Filter stays by location, category and price. View real photos & reviews.</p>
          </div>
        </div>
        <div class="step-item">
          <div class="step-icon">
            <i class="fa-solid fa-calendar-check"></i>
          </div>
          <div>
            <h5>Choose your dates</h5>
            <p>See live availability and pick your perfect time to stay.</p>
          </div>
        </div>
        <div class="step-item">
          <div class="step-icon">
            <i class="fa-solid fa-lock"></i>
          </div>
          <div>
            <h5>Book securely</h5>
            <p>We handle secure payment, confirmations and reminders.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="mt-5" data-aos="fade-up">
  <div class="row g-4 align-items-stretch">
    <div class="col-lg-5">
      <h2 class="section-title mb-3">Explore on the map</h2>
      <p class="text-muted-small mb-3">
        See some popular WanderLust locations on the map. Later we can connect this
        with your real listings.
      </p>
      <ul class="list-unstyled text-muted-small mb-3">
        <li><i class="fa-solid fa-location-dot me-2 text-danger"></i> Goa – beach stays</li>
        <li><i class="fa-solid fa-location-dot me-2 text-warning"></i> Manali – mountain cabins</li>
        <li><i class="fa-solid fa-location-dot me-2 text-info"></i> Bengaluru – city lofts</li>
      </ul>
      <small class="text-muted-small">
        Map powered by <span class="fw-semibold">Leaflet & OpenStreetMap</span>.
      </small>
    </div>

    <div class="col-lg-7">
      <div id="homeMap" class="map-card"></div>
    </div>
  </div>
</section>
